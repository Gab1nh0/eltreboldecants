model perfume {
  id          Int       @id
  house       String?   @db.VarChar(100)
  colection   String?   @db.VarChar(100)
  name        String?   @db.VarChar(100)
  description String?   @db.Text
  price       Decimal?  @db.Decimal(10, 2)
  stock       Int?
  created_at  DateTime? @default(now()) @db.DateTime(0)
